<!DOCTYPE html>
<html>
<% include ../../partials/head %>

    <body>
        <% include ../../partials/header %>
            <div class="container profile_container">
                <div class="row">
                    <p>
                        <% include ../../partials/locals_errors %>
                        <% include ../../partials/form_errors %>
                    </p>
                    <% if(user) { %>
                    <div class="col-xs-12">
                        <nav class="navbar navbar-expand-xl navbar-light bg-light" id="profile_nav">
                            <a class="navbar-brand" href="/fish/user/profile" id="home_link_fish">
                                <div id="heading_container">
                                    <h2 class="profile_h2">
                                        <%= user.local.account.username %>
                                    </h2>
                                    <p class="profile_heading_span"><%= user.local.role %></p>
                                </div>
                            </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav justify-content-end">
                                    <li role="dropdown-item presentation">
                                        <a class="nav-link override_background" href="/fish/user/profile/myFish">
                                            My Fish
                                        </a>
                                    </li>
                                    <li role="dropdown-item presentation">
                                        <a class="nav-link override_background" href="/fish/user/profile/socialNetworking">
                                            Socials
                                        </a>
                                    </li>
                                    <li role="dropdown-item presentation">
                                        <a class="nav-link override_background" href="/fish/user/profile/security">
                                            Security
                                        </a>
                                    </li>
                                    <li role="dropdown-item presentation">
                                        <a class="nav-link override_background" href="/fish/user/profile/edit_preferences">
                                            Preferences & Privacy
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                    <div class="col-xs-12">
                        <div class="profile_div">
                            <form class="password_form">
                                <div class="password_div">
                                    <section class="password_p_section">
                                    <h1 class="password_heading my_fish_h1_inverse">Privacy</h1>
                                    <h2 class="password_heading">Make profile private/public</h2>
                                    <p>
                                        <label for="profile_private" class="profile_private_label">Check to make profile public (searchable by others): </label>
                                        <input type="checkbox" id="profile_private" name="profile_private">
                                    </p>
                                </div>
                            </form>
                            <!-- <form class="theme_form">
                                <section class="theme_section">
                                    <div class="theme_div">
                                        <section class="theme_p_section">
                                        <h2 class="theme_heading">Change Page Theme</h2>
                                        <p>
                                            <label for="theme_selector" class="theme_selector_label">Pick A Theme: </label>
                                            <select id="theme_selector" name="theme_selector"></select>
                                        </p>
                                    </div>
                                </section>
                            </form> -->
                        </div>
                    </div>
                    <% } %>
                </div>
                <% include ../../partials/footer %>
            </div>
            <!-- /container -->
    </body>

</html>