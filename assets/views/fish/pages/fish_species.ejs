<!DOCTYPE html>
<html>
<% include ../partials/head %>
    <body>
        <% include ../partials/header %>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <% include ../partials/locals_errors %>
                    <% include ../partials/form_errors %>
                </div>
                <div class="center col-xs-12">
                    <% if( typeof(singleFishSpecies) != "undefined" && singleFishSpecies.length != 0) { %>
                        <h2 class="title_h2"><%= singleFishSpecies[0].species.name %></h2>
                        <% singleFishSpecies.forEach(fish => { %>
                            <div class="swipe_div">
                                <a href=<%="/singleFish/" + fish._id %> alt=<%="/singleFish/" + fish._id %> title=<%="/singleFish/" + fish._id %> >
                                    <img src=<%="/img/fish/fish/" + fish.images[0] %> alt=<%="/img/fish/" + fish.images %> title=<%="/img/fish/" + fish.images %> class="img-responsive latest_img">
                                </a>
                                <div class="fish_wrapper row">
                                    <div class="fish_left col-xs-4">
                                        <p>
                                            <span class="label_span">Species: </span>
                                        </p>
                                        <p>
                                            <span class="label_span" width="100">Weight: </span>
                                        </p>
                                        <p>
                                            <span class="label_span" width="100">Location: </span>
                                        </p>
                                        <p>
                                            <span class="label_span">Date Caught: </span>
                                        </p>
                                        <p>
                                            <span class="label_span">Caught By: </span>
                                        </p>
                                        <p>
                                            <span class="label_span">Description: </span>
                                        </p>
                                    </div>
                                    <div class="fish_right col-xs-8">
                                        <p>
                                            <a id="type_a" href=<%= "/singleFishSpecies/" + fish.species._id %> alt=<%= "/singleFishSpecies/" + fish.species._id %> title=<%= "/singleFishSpecies/" + fish.species._id %> >
                                                <%= fish.species.name %>
                                            </a>
                                        </p>
                                        <p>
                                            <span id="weight_span">
                                                <%= fish.weight %> kg
                                            </span>
                                        </p>
                                        <p>
                                            <span>
                                                <a id="location_a" href=<%= "/locations/getSingleLocation/" + fish.location._id %> title=<%= "/locations/getSingleLocation/" + fish.location._id %> alt=<%= "/locations/getSingleLocation/:" + fish.location._id %> >
                                                    <%= fish.location.name %>
                                                </a>
                                            </span>
                                        </p>
                                        <p>
                                            <span id="date_caught_span">
                                                <a href=<%= "/loadSingleDate/" + fish.date_caught %> title=<%= "/loadSingleDate/" + fish.date_caught %> alt=<%= "/loadSingleDate/" + fish.date_caught %> >
                                                    <%= fish.date_caught %>
                                                </a>
                                            </span>
                                        </p>
                                        <p>
                                            <span id="caught_by_span">
                                                <%= fish.caught_by.local.account.username %>
                                            </span>
                                        </p>
                                        <p>
                                            <span id="description_span">asdfsadf<%= fish.description %></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else if( fish_species != "undefined" ) { %>
                        <% if(fish_species.length != 0) { %>
                            <h2 class="title_h2">Fish Species that have been successfully caught</h2>
                            <% fish_species.forEach(species => { %>
                                <div class="swipe_div">
                                    <a id="type_a" href=<%= "/singleFishSpecies/" + species._id %> alt=<%= "/singleFishSpecies/" + species._id %> title=<%= "/singleFishSpecies/" + species._id %> >
                                        <h2 class="margin_bottom_40px species_name_title">
                                            <%= species.name %>
                                        </h2>
                                        <img src=<%="/img/fish/fish_species/" + species.images[0] %> alt=<%="/img/fish_species/" + species.images[0] %> title=<%="/img/fish_species/" + species.images[0] %> class="img-responsive latest_img">
                                    </a>
                                    <div class="fish_wrapper row">
                                        <div class="fish_left col-xs-4">
                                            <p>
                                                <span class="label_span">Description: </span>
                                            </p>
                                            <p>
                                                <span class="label_span">External Reference: </span>
                                            </p>
                                        </div>
                                        <div class="fish_right col-xs-8">
                                            <p>
                                                <span id="description_span"><%= species.description %></span>
                                            </p>
                                            <p>
                                                <a href=<%= species.external_ref %> title=<%= species.external_ref %> alt=<%= species.external_ref %> >
                                                    <span id="reference_span">
                                                        <%= species.external_ref %>
                                                    </span>
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
        <!-- /container -->
        <% include ../partials/footer %>
    </body>
</html>