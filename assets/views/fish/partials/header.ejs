<div class="container">
    <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-inverse" style="display: flex; justify-content: right">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <a href="/" class="header_link">Home</a>
            <ul class="navbar-nav ml-auto justify-content-between" style="text-align: right">
                <li role="presentation">
                    <form class="navbar-form pull-right" id="navbar_searchbar" action="/search" method="post" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="param" id="param" minlength="1" required>
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </li>
                <li role="dropdown-item presentation">
                    <a class="nav-link" href="/fishbuddy">Dashboard </a>
                </li>
                <li role="dropdown-item presentation">
                    <a class="nav-link" href="/fish">Fish </a>
                </li>
                <li class="dropdown">
                    <a class="nav-link" href="/fish_species">Fish Species</a>
                    <ul class="dropdown-menu profile_dropdown_list">
                        <% fish_species.forEach(species => { %>
                            <li class="dropdown-item">
                                <a class="nav-link" href=<%= "/fish_species/getSingleFishSpecies/" + species._id %>>
                                    <%= species.name %>
                                </a>
                            </li>
                        <%})%>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="nav-link" href="/locations">Locations</a>
                    <ul class="dropdown-menu profile_dropdown_list">
                        <% locations.forEach(location => { %>
                            <li class="dropdown-item">
                                <a class="nav-link" href=<%= "/locations/getSingleLocation/" + location._id %>>
                                    <%= location.name %>
                                </a>
                            </li>
                        <%})%>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="nav-link" href="/dates">Dates</a>
                    <ul class="dropdown-menu profile_dropdown_list">
                        <% dates.forEach(date => { %>
                            <li class="dropdown-item">
                                <a class="nav-link" href=<%= "/loadSingleDate/" + date %>>
                                    <%= date %>
                                </a>
                            </li>
                        <%})%>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="nav-link" href="/records">Records</a>
                    <ul class="dropdown-menu profile_dropdown_list">
                        <% fish_species.forEach(species => { %>
                            <li class="dropdown-item">
                                <a class="nav-link" href=<%= "/records/getSingleSpeciesRecords/" + species._id %>>
                                    <%= species.name %>
                                </a>
                            </li>
                        <%})%>
                    </ul>
                </li>
                <li role="dropdown-item presentation">
                    <a class="nav-link" href="/fish_contact">Contact</a>
                </li>
                <li role="dropdown-item presentation">
                    <a class="nav-link" href="/stats">Stats</a>
                </li>
                <% if(user) { %>
                <li  role="dropdown-item presentation" class="dropdown">
                    <a href="/fish/user/profile" class="nav-link">
                        <img src=<%= '/img/global/user/' + user.local.profile_img%> title=<%= user.local.profile_img%> alt=<%= user.local.profile_img%> height="30">
                        <span><%= user.local.account.username %></span>
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu profile_dropdown_list">
                        <li class="dropdown-item">
                            <a class="nav-link" href="/fish/user/profile">
                                Profile
                            </a>
                        </li>
                        <li class="dropdown-item">
                            <a class="nav-link" href="/fish/user/profile/myFish">
                                My Fish
                            </a>
                        </li>
                        <li class="dropdown-item">
                            <a href="/fish/user/profile/socialNetworking" class="nav-link">
                                Social Networking
                            </a>
                        </li>
                        <li class="dropdown-item">
                            <a href="/fish/user/profile/security" class="nav-link">
                                Security Settings
                            </a>
                        </li>
                        <li class="dropdown-item">
                            <a href="/fish/user/profile/edit_preferences" class="nav-link">
                                Preferences & Privacy
                            </a>
                        </li>
                        <li class="dropdown-item">
                            <a href="/fish/user/profile/edit_personal_info" class="nav-link">
                                Edit personal information
                            </a>
                        </li>
                        <li class="dropdown-item">
                            <a class="nav-link" href="/user/logout">Logout</a>
                        </li>
                        <% if(user.local.role == "admin" || user.local.role == "moderator") { %>
                        <li class="dropdown-item">
                            <a class="nav-link" href="/admin">
                                Control Panel
                            </a>
                        </li>
                        <% } %>
                    </ul>
                </li>
                <% } else { %>
                <li role="dropdown-item presentation">
                    <a class="nav-link" href="/fish/user/login">Login</a>
                </li>
                <% } %>
            </ul>
        </div>
    </nav>
    <!-- /container -->
    <div class="container">
        <% include ./breadcrumbs.ejs %>
    </div>
    </header>
</div>